.container {

  input {
    display: none;
  }

  label {
    cursor: pointer;
    margin-top: 1em;
  }

  .checked-container {
    display: none;
  }

  input:checked + div .checked-container {
    display: block;
  }

  label:before {
    content: "show ";
  }

  input:checked + div label:before {
    content: "hide ";
  }
}

