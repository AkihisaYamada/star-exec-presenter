.container {

  input {
    display: none;
  }

  label {
    cursor: pointer;
    margin-top: 1em;
  }

  .checked-container {
    display: none;

    .table {
      width: auto; 
    }
  }

  input:checked + .container .checked-container {
    display: block;
  }

  label:before {
    content: "show ";
  }

  input:checked + .container label:before {
    content: "hide ";
  }
}
